<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Checkout</h1>
        <h4>Your Total: </h4>
        <div class="alert alert-danger hidden" id="charge-error">

        </div>
        <form action="/checkout" method="post" id="checkout-form">

            <input type="text" id="name" class="form-control" placeholder="Name" required>
            <input type="text" id="address" class="form-control" placeholder="Address" required>
            <input type="text" id="card-name" class="form-control" placeholder="Card Holder name" required>
            <input type="number" id="card-number" class="form-control" placeholder="Credit Card Number" required>
            <input type="number" id="card-expiry-month" class="form-control" placeholder="Expiration Month" required>
            <input type="number" id="card-expiry-year" class="form-control" placeholder="Expiration Year" required>
            <input type="number" id="card-cvc" class="form-control" placeholder="CVV" required>
            <button type="submit" class="btn btn-success">Buy now</button>
        </form>
    </div>

</div>
<script src="https://js.stripe.com/v2/"></script>
<script src="https://js.stripe.com/v3/"></script>

<script src="javascripts/checkout.js"></script>

