<div class="row">
    <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success {{#if noMessage}}hidden{{/if}}">
            {{successMsg}}
        </div>
    </div>
</div>
{{# each products}}
<div class="row">
    {{# each this}}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src={{this.imagePath}} alt="..." class="img-responsive">
            <div class="caption">
                <h3>{{this.tittle}}</h3>
                <p class="discription">{{this.description}}</p>
                <div class="clearfix">
                <div class="price pull-left">${{this .price}}</div>

                <p class="pull-right"><a href="/add-to-cart/{{this._id}}" class="btn btn-primary pull-right" role="button">Add to cart</a> </p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}